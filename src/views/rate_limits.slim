ruby:
  limits = `curl --max-time 10 --head -H "Authorization: Bearer $(curl -s --max-time 10 "https://auth.docker.io/token?service=registry.docker.io&scope=repository:ratelimitpreview/test:pull" | jq -r .token)" https://registry-1.docker.io/v2/ratelimitpreview/test/manifests/latest`
  limits = limits.split("\n").map(&:strip).reject{ _1.empty? || _1=~ /HTTP/} .map { |l| l.split(': ') }.to_h.transform_keys(&:to_sym)
  limit_period = limits[:"ratelimit-limit"].split(';').at(1)
  limit = limits[:"ratelimit-limit"].split(';').first.to_i
  remaining = limits[:"ratelimit-remaining"].split(';').first.to_i
  source = limits[:"docker-ratelimit-source"]

span.limits == ", pull limit:  #{remaining}/#{limit}, <span>#{limit_period}</span> #{source}"